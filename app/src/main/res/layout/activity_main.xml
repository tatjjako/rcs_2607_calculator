<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:text=""
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" android:id="@+id/textView" app:layout_constraintVertical_bias="0.039"/>
    <Button
            android:text="1"
            android:layout_width="70dp"
            android:layout_height="50dp" android:id="@+id/button"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="160dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"/>
    <Button
            android:text="2"
            android:layout_width="70dp"
            android:layout_height="50dp" android:id="@+id/button2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="160dp" app:layout_constraintStart_toEndOf="@+id/button"
            android:layout_marginStart="5dp"/>
    <Button
            android:text="3"
            android:layout_width="70dp"
            android:layout_height="50dp" android:id="@+id/button3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="160dp" app:layout_constraintStart_toEndOf="@+id/button2"
            android:layout_marginStart="5dp"/>
    <Button
            android:text="+"
            android:layout_width="70dp"
            android:layout_height="50dp" android:id="@+id/buttonPlus"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="160dp" android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/button3"/>
    <Button
            android:text="4"
            android:layout_width="70dp"
            android:layout_height="50dp" android:id="@+id/button4"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="215dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"/>
    <Button
            android:text="5"
            android:layout_width="70dp"
            android:layout_height="50dp" android:id="@+id/button5"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="215dp" app:layout_constraintStart_toEndOf="@+id/button4"
            android:layout_marginStart="5dp"/>
    <Button
            android:text="6"
            android:layout_width="70dp"
            android:layout_height="50dp" android:id="@+id/button6"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="215dp" app:layout_constraintStart_toEndOf="@+id/button5"
            android:layout_marginStart="5dp"/>
    <Button
            android:text="-"
            android:layout_width="70dp"
            android:layout_height="50dp" android:id="@+id/buttonMinus"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="215dp" android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/button6"/>
    <Button
            android:text="7"
            android:layout_width="70dp"
            android:layout_height="50dp" android:id="@+id/button7"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="270dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"/>
    <Button
            android:text="8"
            android:layout_width="70dp"
            android:layout_height="50dp" android:id="@+id/button8"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="270dp" app:layout_constraintStart_toEndOf="@+id/button7"
            android:layout_marginStart="5dp"/>
    <Button
            android:text="9"
            android:layout_width="70dp"
            android:layout_height="50dp" android:id="@+id/button9"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="270dp" app:layout_constraintStart_toEndOf="@+id/button8"
            android:layout_marginStart="5dp"/>
    <Button
            android:text="*"
            android:layout_width="70dp"
            android:layout_height="50dp" android:id="@+id/buttonMult"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="270dp" android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/button9"/>
    <Button
            android:text="+/-"
            android:layout_width="70dp"
            android:layout_height="50dp" android:id="@+id/buttonSign"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="325dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"/>
    <Button
            android:text="0"
            android:layout_width="70dp"
            android:layout_height="50dp" android:id="@+id/button0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="325dp" app:layout_constraintStart_toEndOf="@+id/buttonSign"
            android:layout_marginStart="5dp"/>
    <Button
            android:text="."
            android:layout_width="70dp"
            android:layout_height="50dp" android:id="@+id/buttonComma"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="325dp" app:layout_constraintStart_toEndOf="@+id/button0"
            android:layout_marginStart="5dp"/>
    <Button
            android:text="/"
            android:layout_width="70dp"
            android:layout_height="50dp" android:id="@+id/buttonDiv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="325dp" android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/buttonComma"/>
    <Button
            android:text="="
            android:layout_width="220dp"
            android:layout_height="50dp" android:id="@+id/buttonEquals"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="380dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"/>
    <Button
            android:text="C"
            android:layout_width="70dp"
            android:layout_height="50dp" android:id="@+id/buttonClear"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="380dp" android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/buttonEquals"/>

</androidx.constraintlayout.widget.ConstraintLayout>